<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/cardTheft"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cardAssault"
            android:layout_margin="4dp"
            app:contentPadding="8dp"
            android:backgroundTint="@android:color/holo_orange_light">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THEFT"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|start"
                app:srcCompat="@drawable/theft"
                app:tint="@android:color/white"/>
            <TextView
                android:id="@+id/theftCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                tools:text="9"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/cardAssault"
            app:layout_constraintStart_toEndOf="@id/cardTheft"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@android:color/holo_purple"
            android:layout_marginBottom="4dp"
            app:contentPadding="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ASSAULT"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start|bottom"
                app:srcCompat="@drawable/assault"
                app:tint="@android:color/white"/>
            <TextView
                android:id="@+id/assaultCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                tools:text="9"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/cardRoadAccident"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardTheft"
            android:layout_margin="4dp"
            app:contentPadding="8dp"
            android:backgroundTint="@android:color/holo_green_dark"
            app:layout_constraintEnd_toStartOf="@id/cardDisputes">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ROAD ACCIDENT"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|start"
                app:srcCompat="@drawable/accident"
                app:tint="@android:color/white"/>
            <TextView
                android:id="@+id/accidentCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                tools:text="9"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/cardAssault"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cardTheft"
            android:id="@+id/cardDisputes"
            android:layout_margin="4dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            app:contentPadding="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DISPUTES"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|start"
                app:srcCompat="@drawable/dispute"
                app:tint="@android:color/white"/>
            <TextView
                android:id="@+id/disputeCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                tools:text="9"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"/>
        </com.google.android.material.card.MaterialCardView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPastReports"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="8dp"
            android:paddingBottom="55dp"
            android:clipToPadding="false"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            tools:listitem="@layout/item_past_report"
            app:layout_constraintTop_toBottomOf="@id/cardDisputes"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>